%div.container-fluid{ :style => "height: 100vh; background-color: #202124;" }
  %h2{style: "color: white; font-size: 32px; text-align: center;  justify-content: center;"}
    .div.container{ :style => "height: 10vh; display: flex; justify-content: center; align-items: center;" }
      = t('activerecord.modules.signin.management')
  .div.row.justify-content-start
    .div.col-10.offset-sm-2.col-sm-8.offset-md-3.col-md-6.offset-lg-4.col-lg-4
      %p{:style => "color: red"}= alert
      .div.container{ :style => "height: 38vh; background-color:#2C2D2F; display: flex; justify-content: center; align-items: center;" }
        = form_with model: @user, url: sign_in_path do |f|
          .form-group.ml-4.mr-4
            = f.label t('activerecord.attributes.user.username'), class: "form-label required", style: "color: white;"
            = f.text_field :username, autofocus: true, class: "form-control"
          .form-group.ml-4.mr-4
            = f.label t('activerecord.attributes.user.password'), class: "form-label required", style: "color: white;"
            = f.password_field :password, class: "form-control"
          .row 
            .offset-4.col-4.offset-sm-3.col-sm-6.offset-md-2.col-md-8
              = button_tag t('application.sign_in'), class: "btn btn-success btn-block overflow-hidden", style:"white-space: normal; word-wrap: break-word;"